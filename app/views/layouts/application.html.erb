<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if yield(:title).present? %>
          <%= yield(:title) %>
      <% else %>
          IotaStarter: Crowdfunding without fee
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <% if yield(:meta_description).present? %>
        <meta name="description" content="<%= yield(:meta_description) %>" />
    <% else %>
        <meta name="description" content="Crowdfunding with IOTA" />
    <% end %>
    <meta name="keywords" content="Crowdfunding without fee">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Aldrich|Roboto" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Google Analytics -->
<script>
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

ga('create', 'UA-105880933-1', 'auto');
ga('send', 'pageview');
</script>
<!-- End Google Analytics -->
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
          <%= link_to"IotaStarter", root_path, class:"navbar-brand" %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to"ADD PROJECT", new_project_path, class:"nav-button"  %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
