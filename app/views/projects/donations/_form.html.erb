<%= form_for [@project, @donation] do |form| %>

  <div class="field">
    <p>Your Name</p>
    <%= form.text_field :name, id: :donation_name %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Amount you would like to Donate</p>
    <%= form.number_field :amount, id: :donation_amount %>
    <p>(In million Iota)</p>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Your Website</p>
    <%= form.text_field :url, id: :donation_url %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Your Email</p>
    <%= form.text_field :email, id: :email_url %>
  </div>
  <br>
  <br>
  <br>
  <br>
  <div class="field">
    <p><strong> Your Verification Code:</strong></p>
    <%= form.text_field :tag, value:"#{opttag(10)}" %>
    <br>
    <br>
    <div class="alert alert-info">
      <p>Please Copy and paste above value into your Optional tag before sending donation (that way we can verify your payment) </p>
    </div>
  </div>

  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>
