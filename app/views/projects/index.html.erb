      <%= link_to "Start your own Project Today", new_project_path, class:"btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="text-center">Our Featured Projects</h2>
  
</div>

<div class="container">
  <h3 class="text-center">More Projects</h3>

<% @projects.each do |project| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= project.title %></h3>
    Project Category:
    <span class="badge">
      <%= project.category %>
    </span>
  </div>
  <div class="panel-body">
        <strong>Made By</strong>
        <%= project.owner %>
        <br>
        <strong>Description </strong>
        <%= project.description %>
        <br>
        <strong>Total Amount Raising</strong>
        <%= project.total %> Mi (Million Iota)
        <br>
        <br>
        <%= link_to 'See project', project, class:"btn btn-default" %>

