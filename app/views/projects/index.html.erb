  <div class="panel-heading">
    <h3 class="panel-title"><%= project.title %></h3>
    Project Category:
    <span class="badge">
      <%= project.category %>
    </span>
  </div>
  <div class="panel-body">
        <strong>Made By</strong>
        <%= project.owner %>
        <br>
        <strong>Description </strong>
        <%= project.description.truncate(300) %>
        <br>
