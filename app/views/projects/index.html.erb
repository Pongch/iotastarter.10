        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center" id="myModalLabel">This Project does not exist yet</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">But you can donate to our platform and make this project a reality!</p>
              </br>
              </br>
            </div>
            <div class="modal-footer">
              <div class="text-center">
                <%= link_to "Support our project", sitedonations_path, class:"btn btn-danger btn-large" %>
              </div>
            </div>
        </div>
    </div>
</div>
</div>

<div class="container">
  <h3 class="text-center">More Projects</h3>

<% @projects.each do |project| %>
