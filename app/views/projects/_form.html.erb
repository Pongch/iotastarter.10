
<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>Your Name</p>
    <%= form.text_field :owner, id: :project_owner %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Your Email</p>
    <%= form.text_field :email, id: :project_email %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Your Website</p>
    <%= form.text_field :url, id: :project_url %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Project Title</p>
    <%= form.text_field :title, id: :project_title %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Project Description</p>
    <%= form.text_area :description, id: :project_description %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Project Category</p>
    <%= form.text_field :category, id: :project_category %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Fundraising Goal</p>
    <p>Total Amount you are raising in Million Iota</p>
    <%= form.number_field :total, id: :project_total %>
  </div>
  <br>
  <br>
  <div class="field">
    <p>Your IOTA Wallet Address</p>
    <%= form.text_field :address, id: :project_address %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
